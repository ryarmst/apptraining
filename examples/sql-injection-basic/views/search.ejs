<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - SecureBank</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">SecureBank</a>
            <div class="navbar-nav">
                <a class="nav-link" href="/">Home</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h4>Search Results</h4>
            </div>
            <div class="card-body">
                <form action="/search" method="GET" class="mb-4">
                    <div class="input-group">
                        <input type="text" class="form-control" name="query" value="<%= typeof query !== 'undefined' ? query : '' %>" placeholder="Search users...">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </form>

                <% if (typeof results !== 'undefined' && results.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Credit Card</th>
                                    <th>SSN</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% results.forEach(function(result) { %>
                                    <tr>
                                        <td><%= result.username %></td>
                                        <td><%= result.credit_card || 'N/A' %></td>
                                        <td><%= result.ssn || 'N/A' %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else if (typeof results !== 'undefined') { %>
                    <div class="alert alert-info">No results found.</div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html> 